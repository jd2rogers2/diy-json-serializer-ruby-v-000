<div class="authorName"><%= @post.author.name %></div>
<a href="#" class="js-next" data-id="<%= @post.id %>">Next...</a>
<h1 class="postTitle"><%= @post.title %></h1>
<p class="postBody"><%= @post.description %></p>

<script type="text/javascript" charset="utf-8">
$(function(){
  $('.js-next').on("click", function(){
    var new_id = parseInt($(".js-next").attr("data-id")) + 1;
    $.get("/posts/" + new_id + "/post_data", function(data){
      $('.authorName').text(JSON.parse(data)["author"]["name"]);
      $('.postTitle').text(JSON.parse(data)["title"]);
      $('.postBody').text(JSON.parse(data)["description"]);
      $('.js-next').attr("data-id", JSON.parse(data)["id"]);
    });
  });
});
</script>